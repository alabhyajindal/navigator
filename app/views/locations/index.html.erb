<% if current_user %>
  <h1><%= "#{current_user.name}'s map" %></h1>
  <% if @locations.empty? %>
    <p>Add locations to the map using the Manage section.</p>
  <% end %>
  <br>
  <div id="map" style="height: 500px; width: 600px"></div>

  <% content_for :custom_js do %>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.css' rel='stylesheet'/>
    <%= javascript_import_module_tag "custom/main" %>
  <% end %>

<% else %>
  <h3>Get a personal map of locations you've visited. </h3>
  <br/>
  <nav>
    <%= link_to 'Sign up', signup_path %>
    <%= link_to 'Sign in', signin_path %>
  </nav>
  <br/>
  <h4>Or use my account:</h4>
  <p>Email: <code>alabhya@test.com</code></p>
  <p>Password: <code>secret</code></p>
  <br>
  <i><p>P.S. There is no email verification, this is a toy app!</p></i>
<% end %>

